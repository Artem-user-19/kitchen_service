<form method="GET" action="{% url 'catalog:beverages' %}" class="mb-4">
    <div class="input-group">
        <input type="text" name="query" class="form-control" placeholder="Search for recipes..." value="{{ query }}">
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<div class="container" id="main">
    <a href="{% url 'catalog:index' %}" class="btn btn-warning btn-lg">Food</a>
    <div class="row">
        {% for beverage in beverages %}
            <div class="col-md-4">
                <div class="card mb-4">
                    {% if beverage.image %}
                        <img src="{{ beverage.image.url }}" class="card-img-top" alt="{{ beverage.name }}">
                    {% else %}
                        <img src="{% static 'placeholder.jpg' %}" class="card-img-top" alt="{{ beverage.name }}">
                    {% endif %}
                    <div class="card-body">
                        <h5 class="card-title">{{ beverage.name }}</h5>
                        <p class="card-text">{{ beverage.description }}</p>
                        <p class="card-text">Price: {{ beverage.price }}</p>
                        <button class="btn btn-primary">Order now</button>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>
</div>
