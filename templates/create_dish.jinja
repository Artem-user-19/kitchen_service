<!DOCTYPE html>
<html lang="en">
<head>
  {% load static %}
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Create New Dish</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet">
{#    <link href="{% static 'css/dish_create.css' %}" rel="stylesheet">#}
</head>

<body>

    <div class="container mt-5">
        <h1>Create New Dish</h1>
        <form method="post" enctype="multipart/form-data">
            {% csrf_token %}
            <div class="mb-3">
                <label for="name" class="form-label">Name</label>
                <input type="text" class="form-control" id="name" name="name" required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea class="form-control" id="description" name="description" required></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Image</label>
                <input type="file" class="form-control" id="image" name="image">
            </div>
            <div class="mb-3">
                <label for="price" class="form-label">Price</label>
                <input type="number" class="form-control" id="price" name="price" step="0.01" required>
            </div>
            <div class="mb-3">
                <label for="dish_type" class="form-label">Dish Type</label>
                <select class="form-select" id="dish_type" name="dish_type" required>
                    <option value="" selected disabled>Select Dish Type</option>
                    {% for choice in form.dish_type.field.choices %}
                        <option value="{{ choice.0 }}">{{ choice.1 }}</option>
                    {% endfor %}
                </select>
            </div>
            <div class="mb-3">
                <label for="cooks" class="form-label">Cooks</label>
                <select class="form-select" id="cooks" name="cooks" multiple required>
                  {% if request.user.is_authenticated %}
                  <option value="{{ request.user.id }}" selected>{{ request.user.username }}</option>
                {% endif %}
</select>
            </div>
            <button type="submit" class="btn btn-primary">Create Dish</button>
        </form>
    </div>
</body>
</html>
